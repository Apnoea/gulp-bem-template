mixin breadcrumbs(mods)
  -
    const baseName = 'breadcrumbs';
    let allMods = '';
    if (typeof (mods) !== 'undefined' && mods) {
      const modsList = mods.split(',');
      for (const element of modsList) {
        allMods = allMods + ' '
        allMods = element.trim()[0] === '-' ? allMods + baseName + element.trim() : allMods + element.trim() + '__' + baseName
      }
    }

  ul.breadcrumbs(class=allMods)&attributes(attributes)
    block

mixin breadcrumbs-item(text, href, mods)
  -
    let allMods = ''
    if (typeof (mods) !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods = allMods + ' breadcrumbs__item--' + element.trim()
      }
    }

  li.breadcrumbs__item(class=allMods)&attributes(attributes)
    if(typeof(href) !== 'undefined' && href)
      a.breadcrumbs__link(href=href)!=text
    else
      span.breadcrumbs__text!=text
