mixin ui-button(text, mods, isSubmit)
  -
    const baseName = 'ui-button'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  if (attributes.href)
    .ui-button(class=allMods)
      a&attributes(attributes)!=text
        block

  else if (typeof(isSubmit) !== 'undefined' && isSubmit)
    .ui-button(class=allMods)
      input(value=text, type='submit')&attributes(attributes)

  else
    .ui-button(class=allMods)&attributes(attributes)
      button!=text
        block
